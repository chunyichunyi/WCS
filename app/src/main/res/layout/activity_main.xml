<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.wcs.MainActivity">

    <View
        android:id="@+id/View_Top_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentTop="true"
        android:background="@color/colorViewBackground" />

    <RadioGroup
        android:id="@+id/radioGroup_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorRadioGroupBackground"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_channel1"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_channel1"
            android:text="@string/tab_menu_channel1" />

        <RadioButton
            android:id="@+id/radioButton_channel2"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_channel2"
            android:text="@string/tab_menu_channel2" />

        <RadioButton
            android:id="@+id/radioButton_channel3"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_channel3"
            android:text="@string/tab_menu_channel3" />

        <RadioButton
            android:id="@+id/radioButton_channel4"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/tab_menu_channel4"
            android:text="@string/tab_menu_channel4"/>

    </RadioGroup>

    <View
        android:id="@+id/View_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/radioGroup_bar"
        android:background="@color/colorViewBackground" />

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View_Top_bar"
        android:layout_above="@id/View_bottom_bar"/>

</RelativeLayout>
